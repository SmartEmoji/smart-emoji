{
  "manifest_version": 2,

  "name": "SmartEmoji",
  "description": "A browser extension for shorthand emoji typing",
  "version": "0.0.1",
  
  "icons": {
    "128": "img/icon.png"
  },

  "browser_action": {
    "default_icon": "/img/icon.png",
    "default_popup": "/popup.html"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/",
    "*://*/*"
  ],

  "web_accessible_resources": [
    "img/*.png"
  ]
}