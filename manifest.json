{
  "manifest_version": 2,

  "name": "SmartEmoji",
  "description": "A browser extension to allow for shorthand emoji typing",
  "version": "0.0.1",
  
  "icons": {
    "128": "img/icon.png"
  },

  "browser_action": {
    "default_icon": "img/icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "activeTab",
    "http://*/",
    "https://*/",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "img/*.png"
  ]
}